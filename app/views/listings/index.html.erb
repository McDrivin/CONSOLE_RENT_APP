<div class="container mt-3">
  <h1>Latest listings</h1>
  <div class="row gy-4">
    <% @listings.each do |listing| %>
      <div class="col-3">
        <div class="card">
          <%= cl_image_tag listing.photos[0].key, class: "card-img-top" %>
          <div class="card-body">
            <h5 class="card-title"><%= listing.title %></h5>
            <% if listing.availability %>
              <%= link_to "More info", listing_path(listing), class: "btn btn-primary" %>
            <% else %>
              <p>This item currently unavailable.</p>
              <%= link_to "More info", listing_path(listing), class: "btn btn-primary disabled" %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
