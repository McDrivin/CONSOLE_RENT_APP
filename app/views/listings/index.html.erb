
<div class="container my-3">
  <div class="container col-8 my-5">
    <form novalidate="novalidate" class="simple_form search" action="/listings" accept-charset="UTF-8" method="get">
      <div class="search-form-control form-group">
        <input class="form-control string required" type="text" name="query" id="search_query" placeholder="Find your favourite console" value="<%= params[:query] %>"/>
        <button name="button" type="submit" class="btn btn-success"><i class="fas fa-search"></i> Search</button>
      </div>
    </form>
  </div>
  <div class="row gy-4">
    <% @listings.each do |listing| %>
      <div class="col-3">
        <div class="card">
          <% if listing.photos.any? %>
            <%= cl_image_tag listing.photos.first.key, class: "card-img-top" %>
          <% else %>
            <img src="https://res.cloudinary.com/dq9hvwxj8/image/upload/v1669199190/hhth1iyyoguqnzs7hg9e.jpg">
          <% end %>
          <div class="card-body">
            <h5 class="card-title"><%= listing.title %></h5>
            <div class="d-flex justify-content-between align-items-center">
              <%= link_to "More info", listing_path(listing), class: "btn btn-primary" %>
              <h5>$<%= number_with_precision(listing.rental_price , precision: 2) %>/day</h5>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<%= render "shared/footer" %>
